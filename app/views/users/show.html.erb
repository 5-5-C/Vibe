  background-color: #f15b31;
}

.panel-title {
  font-weight: bold;
}

.panel-info {
  border: none;
}

.panel-info>.panel-heading {
}

.panel-body {
  padding: 15px;
padding-top: 0px;
}

.panel-footer {
  background-color: #0d2c40;
  color: white;
}

#goals {
    width: 50%;
    background-color: navy;
    position: absolute;
    margin-top: 34%;
