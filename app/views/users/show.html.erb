<div class="user-profile-container">

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
          <div class="panel panel-info">
            <div class="panel-heading">
              <% if current_user.first_name %>

              <h3 class="panel-title"><%= current_user.first_name.capitalize %>'s Profile
                <% else %>

                <h3 class="panel-title"> Your Profile

                  <% end %>


                <span class="pull-right">
                <i class="glyphicon glyphicon-edit"></i></a>

                  <%= link_to 'Edit Profile', edit_user_path %>
                </span>
              </h3>


         </span>
           </h3>
            </div>

            <div class="panel-body">
              <div class="row">

                <% if current_user.picture_file_name %>
                <img class="profile-pic" data-src=  <%= image_tag current_user.picture, :style => "width:300px;height:300px;" %>
                <% else %>

                <div class="profile-pic">
                  <img src="//ssl.gstatic.com/accounts/ui/avatar_2x.png">
                </div>
                <% end %>

                <!-- <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" class="img-circle img-responsive"> </div> -->


                <div class=" col-md-9 col-lg-9 ">
                  <table class="table table-user-information">
                    <tbody>
                      </br>
                        <tr>
                          <td>About Me:</td>
                          <td><%= current_user.summary %></td>
                        </tr>
                      <tr>
                          <td>Region:</td>

                        <td><%= current_user.region %></td>
                      </tr>
                        <% if current_user.date_of_birth %>
                        <tr>
                          <td>Age:</td>
                          <td><%= current_user.age %></td>
                        </tr>
                      <% else %>
                      <tr>
                        <td>Age:</td>
                      </tr>

                      <% end %>

                      <tr>
                        <td>Email:</td>
                        <td><%= current_user.email %></td>
                      </tr>
                      <tr>
                        <td>Goals:</td>
                        <td><%= current_user.goals %></td>
                      </tr>

                      <tr>
                        <td>skills:</td>
                        <td><%= current_user.skill1 %></td>
                        <td><%= current_user.skill2 %></td>
                        <td><%= current_user.skill3 %></td>
                        <td><%= current_user.skill4 %></td>
                        <td><%= current_user.skill5 %></td>
                        <tr>

                        <td>Join Date:</td>
                          <td><%= current_user.created_at.strftime("%m/%d/%Y") %></td>
                      </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <div class="panel-footer">

        <h3> My Events </h3>
        <% @events.each do |event|%>
        <h4><%= link_to event.name %></h4>
        <% end %>

        </div>
      </div>
    </div>
  </div>


<tr>
  <td>Hours Completed:</td>
  <td><%= current_user.hours %></td>
  <div id="goals">
    <%= percentage = (current_user.hours.to_f / current_user.goals) * 100 %>
    <div style = "width:<%= percentage %>%" id="myProgress"></div>
  </div>
</tr>
