  <div class="container">

          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >


            <div class="panel panel-info">
              <div class="panel-heading">


                  <h3 class="panel-title"> Edit Profile</h3>

              </div>
              <div class="panel-body">
                <div class="row">

                <%= form_for @user, html: { multipart: true } do |f| %>

                <% if @user.errors.any? %>
                  <div class ="error_messages">
                    <h3>Form is invalid</h3>
                  <ul>
                    <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                  </div>
                <% end %>

                <p class="sign">Organizations will want to know who theyâ€™re onboarding so tell them a bit about yourself! </p>
          <div class=" col-md-9 col-lg-9 ">
            <table class="table table-user-information">
              <tbody>
              </br>

                <tr>
                  <td>Profile Picture:</td>
                  <td><%= f.file_field :picture %></td>
                </tr>

                <tr>
                  <td>First Name:</td>
                  <td><%= f.text_field :first_name %></td>
                </tr>
                <tr>
                  <td>Last Name:</td>
                  <td><%= f.text_field :last_name %></td>
                </tr>
                <tr>
                  <td>About Me:</td>
                  <td><%= f.text_area :summary, :cols => "50", :rows => "10" %></td>
                </tr>
                <tr>
                  <td>Region:</td>
                  <td> <%= select("user", "region", User::REGIONS) %></td>
                </tr>
                <tr>
                  <td>Date of Birth:</td>
                  <td> <%= f.date_select :date_of_birth,
                        :start_year => 1920,
                        order: [:month, :day, :year],
                        prompt: [ day: 'Select day', month: 'Select month', year: 'Select year' ] %></td>
                </tr>
                <tr>
                  <td> Hour Goals: </td>
                  <td> <%= f.number_field(:goals) %></td>
                </tr>

                <tr>
                  <td> Skills: </td>
                  <tr>
                  <td> <%= select("user", "skill1", User::SKILLS) %></td><BR>
                  </tr>
                  <tr>
                  <td> <%= select("user", "skill2", User::SKILLS) %></td><BR>
                  </tr>
                  <tr>
                  <td> <%= select("user", "skill3", User::SKILLS) %></td><BR>
                  </tr>
                  <tr>
                  <td> <%= select("user", "skill4", User::SKILLS) %></td><BR>
                  </tr>
                  <tr>
                  <td> <%= select("user", "skill5", User::SKILLS) %></td><BR>
                </tr>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="panel-heading">
      <h3 class="panel-title"><%= f.submit "Update Profile" %></h3>
      </div>
     </div>
    </div>
  </div>

          <% end %>
