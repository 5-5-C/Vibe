<!DOCTYPE html>
<html>
  <head>
    <title>Vibe</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script> -->

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/home">V.I.B.E</a>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
      <li><a href="users/new"><span class="glyphicon glyphicon-user"></span> My Profile</a></li>
      <li><a href="sessions/new"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
      <% else %>
      <li><a href="users/new"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
      <li><a href="sessions/new"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
      <% end %>
    </ul>
  </div>
</nav>


    <%= yield %>

    <p class="userinfo">
   <% if current_user %>
     Signed in as <%= current_user.first_name %> <%= link_to "Log out", session_path("current"), :method => :delete %>
     <%= link_to "My Profile", user_path(current_user) %>

   <% else %>
     <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
    <% end %>
  </p>

  </body>
  <footer>
    V.I.B.E
  </footer>
</html>
