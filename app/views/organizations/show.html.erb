<h1><%= @organization.name %></h1>

<% if current_user && current_user == @organization.user %>

  <h3><%= link_to "Create an Event", new_organization_event_path(@organization) %> | <%= link_to "Edit Organization", edit_organization_path(@organization) %></h3>

<% end %>


<div class="organization_container">

<h3>About Us:</h3>
 <%= @organization.description %>
<h2 class = "location">Location:</h2>
 <div id="location"> <%= @organization.location %> </div>



</div>
<div id="map"></div>

<h3>Events:</h3>

 <% @events.each do |event| %>

 <div class="container">
		<div class="row">
      <% if current_user && current_user == @organization.user %>
      <%= link_to "Edit Event", edit_organization_event_path(event) %></h2>
      <% end %>
			<div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
				<ul class="event-list">
					<li>
						<time datetime="2014-07-20">
							<span class="day"><%= event.date.strftime("%d") %></span>
              <span class="month"><%= event.date.strftime("%^b") %></span>
							<span class="time">ALL DAY</span>
						</time>
						<div class="info">
							<h2 class="title"><%= event.name %> |

                <% if current_user %>
               <%= link_to "Sign up", event_signup_url(event) %></h2>
               <% else %>
                 Please Login to Apply for Events</h2>
               <% end %>



               </br>
							<p class="desc"><%= event.description %></p>
              <p class="desc"><%= event.location %></p>


						</div>
					</li>
				</ul>
			</div>
		</div>
	</div>


  <% if current_user && current_user == @organization.user %>




  <table class="table table-bordered table-definition mb-5">
     <thead class="table-warning ">
         <tr>
             <th>APPLIED USERS</th>
             <th>Name</th>
             <th>Application Date</th>
             <th>E-mail address</th>
             <th>Confirmed</th>
         </tr>
     </thead>
     <% event.users.each do |user| %>

     <tbody>
         <tr>
             <td>
                 <label class="custom-control custom-checkbox">
                     <input type="checkbox" class="custom-control-input">
                     <span class="custom-control-indicator"></span>
                 </label>
             </td>

             <td><%= user.first_name %> <%= user.last_name%></td>
             <td><%= user.created_at.to_formatted_s(:long_ordinal) %></td>
             <td><%= user.email %></td>
             <td>No</td>
         </tr>

     </tbody>
     <% end %>
     <tfoot>
         <tr>
             <th></th>
             <th colspan="4">
                 <button class="btn btn-default">Approve</button>
                 <button class="btn btn-default">Approve All</button>
             </th>
         </tr>
     </tfoot>
  </table>

  <% end %>



       <% end %>
