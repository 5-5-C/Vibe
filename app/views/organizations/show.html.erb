<img src="/assets/peoplevibe.jpg" class="img-org-indexpage">
<img src="/assets/vibe1.png" class="vibe-img-profile-showpage">


  <h1 class="org-name"><%= @organization.name %></h1>

  <% if current_user && current_user == @organization.user %>

  <h3><%= link_to "Create an Event", new_organization_event_path(@organization) %> | <%= link_to "Edit Organization", edit_organization_path(@organization) %></h3>

<% end %>

<section class="org-section">
<p><%= @organization.description %></p>


<h2>Events</h2>


<% @events.each do |event| %>


 <div class="container">
		<div class="row">
      <% if current_user && current_user == @organization.user %>
      <%= link_to "Edit Event", edit_organization_event_path(event) %></h2>
      <% end %>
			<div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
				<ul class="event-list">
					<li>
						<time datetime="2014-07-20">
							<span class="day"><%= event.date.strftime("%d") %></span>
              <span class="month"><%= event.date.strftime("%^b") %></span>
							<span class="time">ALL DAY</span>
						</time>
						<div class="info">
							<h2 class="title"><%= event.name %> |

                <% unless event.users.include?(current_user) %>
      <%= link_to "sign up", event_signup_url(event) %></h2>
               <% else %>
                 Signed Up!</h2>
               <% end %>



               </br>
							<p class="desc"><%= event.description %></p>
              <p class="desc"><%= event.location %></p>


						</div>
					</li>
				</ul>
			</div>
		</div>
	</div>


  <% if current_user && current_user == @organization.user %>


  <table class="table table-bordered table-definition mb-5">
     <thead class="table-warning ">
         <tr>
             <th>APPLIED USERS</th>
             <th>Name</th>
             <th>Application Date</th>
             <th>E-mail address</th>
             <th>Confirmed</th>
         </tr>
     </thead>

     <% event.users.each do |user| %>

     <tbody>
         <tr>
             <td>
                 <label class="custom-control custom-checkbox">
                     <input type="checkbox" class="custom-control-input">
                     <span class="custom-control-indicator"></span>
                 </label>
             </td>

             <td><%= user.first_name %> <%= user.last_name%></td>
             <td><%= user.created_at.to_formatted_s(:long_ordinal) %></td>
             <td><%= user.email %></td>
             <td>No</td>
         </tr>
     </tbody>
     <% end %>

     <tfoot>
         <tr>

             <th></th>
             <th colspan="4">
                 <button class="btn btn-default">Approve</button>
                 <button class="btn btn-default">Approve All</button>
             </th>
         </tr>
     </tfoot>
  </table>

  <% end %>

<% end %>



  <div class="organization_container">
    <h3>Description:</h3>
      <%= @organization.description %>
    <h2 class = "location">Location:</h2>
    <div id="location"> <%= @organization.location %> </div>
</section>
    <div class="org-map" id="map">
      <iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?&key=AIzaSyA-n-_WBfJeCKnVbLZEq8zE16CC-XgtCjI&q=<%=URI.encode(@organization.location)%>" allowfullscreen></iframe>
    </div>
  </div>
